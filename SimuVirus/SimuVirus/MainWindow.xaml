<Window x:Class="SimuVirus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimuVirus"
        mc:Ignorable="d"
        Title="病毒模拟器" Height="350" Width="525">
    <Grid>
        <Button Content="设置开机启动" 
                x:Name="Startup" 
                Click="Set_Startup" 
                Margin="50,30,320,240" 
                FontSize="20"/>

        <Button Content="感染PE文件" 
                x:Name="InfectPE" 
                Click="Infect_PE" 
                Margin="320,30,50,240" 
                FontSize="20"/>

        <Button Content="隐藏进程" 
                x:Name="HideProcess" 
                Click="Hide_Process" 
                Margin="50,136,320,133.5" 
                FontSize="20"/>

        <Button Content="获取键盘输入" 
                x:Name="GetKeyboardInput" 
                Click="Get_KeyboardInput" 
                Margin="320,136,50,133.5" 
                FontSize="20"/>
    </Grid>
</Window>
